<!-- Pages/Shared/_Layout.cshtml -->
@{
var username = Context.Items["Username"] as string;
var role = Context.Items["Role"] as string;
var isAuthenticated = !string.IsNullOrEmpty(username);
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="color-scheme" content="dark">
    <title>@ViewData["Title"] - Sentinel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Ogur.Sentinel.Api.styles.css" asp-append-version="true"/>
    <style>
        /* Fix navbar text cutoff */
        .navbar-brand {
            overflow: visible !important;
            line-height: normal !important;
        }
        .glass-nav {
            overflow: visible !important;
        }
        .navbar {
            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark glass-nav mb-3">
        <div class="container">
            <a href="https://ogur.dev" class="btn btn-sm btn-outline-light me-3" style="font-size: 0.85rem;">
                ← ogur.dev
            </a>
            <a class="navbar-brand" asp-area="" asp-page="/Index" style="overflow: visible; display: inline-block;">Ogur.Sentinel.Api</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Respawn">Respawn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Download">Download</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>

                <div id="user-info" class="user-info" style="display: none;">
                    👤 <span id="username-display"></span>
                    <span id="role-badge"></span>
                    <a href="/Logout" class="btn btn-sm btn-outline-secondary">
                        Logout 🔓
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container d-flex justify-content-between align-items-center">
        <div>
            &copy; 2025 - Ogur.Sentinel - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
        <div class="text-end" style="font-size: 0.75rem; opacity: 0.7; line-height: 1.4;">
            <div id="api-version">API: loading...</div>
            <div id="worker-version">Worker: loading...</div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/auth.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>


<!-- ✅ Wypełnij user info z cookie -->
<script>
    (function() {
        function getCookie(name) {
            const cookies = document.cookie.split(';');
            for (let cookie of cookies) {
                const [cookieName, cookieValue] = cookie.trim().split('=');
                if (cookieName === name) return cookieValue;
            }
            return null;
        }

        const username = getCookie('username');
        const role = getCookie('role');

        if (username && role) {
            document.getElementById('username-display').textContent = username;
            document.getElementById('user-info').style.display = 'block';

            // Pokaż badge dla wszystkich ról
            const roleBadge = document.getElementById('role-badge');
            if (role === 'Admin') {
                roleBadge.innerHTML = '<span class="badge bg-danger">Admin</span>';
            } else if (role === 'Operator') {
                roleBadge.innerHTML = '<span class="badge bg-info">Operator</span>';
            } else if (role === 'Timer') {
                roleBadge.innerHTML = '<span class="badge bg-secondary">Timer</span>';
            }
        }
    })();
</script>

@await RenderSectionAsync("Scripts", required: false)

<!-- Versions -->
<script>
    (async () => {
        try {
            const apiRes = await fetch('/version');
            const apiData = await apiRes.json();
            document.getElementById('api-version').textContent =
                `API: ${apiData.version} (${apiData.build_time})`;
        } catch (e) {
            document.getElementById('api-version').textContent = 'API: error';
        }

        try {
            const workerRes = await fetch('/worker/version');
            const workerData = await workerRes.json();
            document.getElementById('worker-version').textContent =
                `Worker: ${workerData.version} (${workerData.build_time})`;
        } catch (e) {
            document.getElementById('worker-version').textContent = 'Worker: disconnected';
        }
    })();
</script>
</body>
</html>