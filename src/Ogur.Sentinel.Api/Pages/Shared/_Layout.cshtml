<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Ogur.Sentinel.Api</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Ogur.Sentinel.Api.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark glass-nav mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Ogur.Sentinel.Api</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Respawn">Respawn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>
    
                @if (Context.Session.GetString("IsAuthenticated") == "true")
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="navbar-text me-3">
                                👤 @Context.Session.GetString("Username") 
                                @if (Context.Session.GetString("Role") == "Viewer")
                                {
                                    <span class="badge bg-secondary">Read-only</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">Admin</span>
                                }
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Logout">Logout</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container d-flex justify-content-between align-items-center">
        <div>
            &copy; 2025 - Ogur.Sentinel - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
        <div class="text-end" style="font-size: 0.75rem; opacity: 0.7; line-height: 1.4;">
            <div id="api-version">API: loading...</div>
            <div id="worker-version">Worker: loading...</div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
<script>
    (async () => {
        try {
            const apiRes = await fetch('/version');
            const apiData = await apiRes.json();
            document.getElementById('api-version').textContent = 
                `API: ${apiData.version} (${apiData.build_time})`;
        } catch (e) {
            document.getElementById('api-version').textContent = 'API: error';
        }

        try {
            const workerRes = await fetch('/worker/version');
            const workerData = await workerRes.json();
            document.getElementById('worker-version').textContent = 
                `Worker: ${workerData.version} (${workerData.build_time})`;
        } catch (e) {
            document.getElementById('worker-version').textContent = 'Worker: disconnected';
        }
    })();
</script>
</body>
</html>