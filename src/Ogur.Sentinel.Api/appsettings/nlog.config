<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/nlog-internal-api.log">

  <!-- Enable ASP.NET Core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- Define targets -->
  <targets>
    <!-- Console target - currently Trace for debugging, change to Info for production -->
    <target xsi:type="Console" name="console"
            layout="${longdate}|${level:uppercase=true}|${logger:shortName=true}|${message} ${exception:format=tostring}" />

    <!-- ALL LEVELS - Complete log file -->
    <target xsi:type="File" name="allfile"
            fileName="logs/api-all-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/api-all-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- TRACE level only -->
    <target xsi:type="File" name="tracefile"
            fileName="logs/api-trace-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/api-trace-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="7"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- DEBUG level and above -->
    <target xsi:type="File" name="debugfile"
            fileName="logs/api-debug-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/api-debug-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="14"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- INFO level and above -->
    <target xsi:type="File" name="infofile"
            fileName="logs/api-info-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/api-info-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- WARN level and above -->
    <target xsi:type="File" name="warnfile"
            fileName="logs/api-warn-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/api-warn-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- ERROR level and above -->
    <target xsi:type="File" name="errorfile"
            fileName="logs/api-error-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/api-error-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="90"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- FATAL level only -->
    <target xsi:type="File" name="fatalfile"
            fileName="logs/api-fatal-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/api-fatal-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="365"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- SPECIALIZED - HTTP requests (all levels) -->
    <target xsi:type="File" name="httpfile"
            fileName="logs/api-http-${shortdate}.log"
            layout="${longdate}|${aspnet-request-ip}|${aspnet-request-method} ${aspnet-request-url}|${aspnet-response-statuscode}|${aspnet-request-useragent}|${message}"
            archiveFileName="logs/archives/api-http-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="14"
            concurrentWrites="true"
            keepFileOpen="false" />
  </targets>

  <!-- Logging rules -->
  <rules>
    <!-- HTTP requests to specialized file -->
    <logger name="Microsoft.AspNetCore.Hosting.Diagnostics" minlevel="Trace" writeTo="httpfile" final="true" />

    <!-- Skip noisy Microsoft logs (only warnings and above) -->
    <logger name="Microsoft.AspNetCore.*" maxlevel="Info" final="true" />
    <logger name="Microsoft.Extensions.Http.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- Level-specific files -->
    <logger name="*" level="Trace" writeTo="tracefile" />
    <logger name="*" minlevel="Debug" writeTo="debugfile" />
    <logger name="*" minlevel="Info" writeTo="infofile" />
    <logger name="*" minlevel="Warn" writeTo="warnfile" />
    <logger name="*" minlevel="Error" writeTo="errorfile" />
    <logger name="*" level="Fatal" writeTo="fatalfile" />

    <!-- All logs to console and complete file -->
    <logger name="*" minlevel="Trace" writeTo="console,allfile" />
  </rules>
</nlog>