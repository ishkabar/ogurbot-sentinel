<Window x:Class="Ogur.Sentinel.Desktop.Views.LicenseExpiredWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ogur Sentinel - Licencja"
        Height="300"
        Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1e1e1e"
        AllowsTransparency="True">
    
    <Border BorderBrush="#ff6600" BorderThickness="3" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#2d2d30" 
                    CornerRadius="7,7,0,0"
                    Padding="20,15">
                <TextBlock Text="🔒 Ogur Sentinel" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="#ff6600"
                           HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="40">
                
                <TextBlock Text="🦎" 
                           FontSize="64"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="Licencja wygasła!" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Spytaj Ogura o nową wersję" 
                           FontSize="18" 
                           Foreground="#cccccc"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <TextBlock x:Name="ExpirationDateText"
                           FontSize="14" 
                           Foreground="#999999"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Footer Button -->
            <Border Grid.Row="2" 
                    Background="#2d2d30" 
                    CornerRadius="0,0,7,7"
                    Padding="20,15">
                <Button Content="Zamknij"
                        Click="Close_Click"
                        Padding="20,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#ff6600"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#ff6600"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cc5200"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
            
        </Grid>
    </Border>
</Window>
