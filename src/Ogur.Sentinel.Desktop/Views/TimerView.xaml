<Page x:Class="Ogur.Sentinel.Desktop.Views.TimerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1e1e1e"
      SizeChanged="Page_SizeChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Content -->
        <Grid Grid.Row="0" 
              x:Name="TimersContainer"
              Margin="10">
                <!-- Layout się zmienia w code-behind -->
                
                <!-- Header -->
                <TextBlock x:Name="HeaderText"
                          Text="Next Respawns"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"
                          Grid.Row="0"
                          Grid.ColumnSpan="2"/>
                
                <!-- 10m Timer -->
                <Border x:Name="Timer10mBorder"
                       Background="#2d2d2d"
                       CornerRadius="10"
                       Grid.Row="1"
                       Grid.Column="0">
                    <StackPanel>
                        <TextBlock x:Name="Label10m"
                                  Text="10 Minutes"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#4CAF50"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"/>
                        
                        <TextBlock x:Name="Countdown10mText"
                                  Text="--:--:--"
                                  FontSize="48"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"/>
                        
                        <TextBlock x:Name="NextTime10mText"
                                  Text="Next: --:--:--"
                                  FontSize="14"
                                  Foreground="#999"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- 2h Timer -->
                <Border x:Name="Timer2hBorder"
                       Background="#2d2d2d"
                       CornerRadius="10"
                       Grid.Row="2"
                       Grid.Column="0">
                    <StackPanel>
                        <TextBlock x:Name="Label2h"
                                  Text="2 Hours"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#2196F3"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"/>
                        
                        <TextBlock x:Name="Countdown2hText"
                                  Text="--:--:--"
                                  FontSize="48"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"/>
                        
                        <TextBlock x:Name="NextTime2hText"
                                  Text="Next: --:--:--"
                                  FontSize="14"
                                  Foreground="#999"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Status -->
                <TextBlock x:Name="StatusText"
                          Text="Last synced: Never"
                          FontSize="12"
                          Foreground="#666"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Margin="0,10,0,0"
                          Grid.Row="3"
                          Grid.ColumnSpan="2"/>
            </Grid>
  

        <!-- Bottom Bar -->
        <!--
        <Border Grid.Row="1"
                Background="#2d2d2d"
                Height="50"
                BorderBrush="#3d3d3d"
                BorderThickness="0,1,0,0">
            <Grid Margin="10,0">
                <Button Content="🔄 Sync"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PrimaryButton}"
                        Click="Refresh_Click"
                        x:Name="SyncButton"/>
                
                <Button Content="🚪 Logout"
                        HorizontalAlignment="Right"
                        Background="#cc0000"
                        Style="{StaticResource PrimaryButton}"
                        Click="Logout_Click"
                        x:Name="LogoutButton"/>
            </Grid>
        </Border>
        -->
    </Grid>
</Page>