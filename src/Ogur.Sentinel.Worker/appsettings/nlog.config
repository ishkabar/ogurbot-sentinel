<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/nlog-internal-worker.log">

    <!-- Enable ASP.NET Core layout renderers -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore" />
    </extensions>

    <!-- Define targets -->
    <targets>
        <!-- Console target - currently Trace for debugging, change to Info for production -->
        <target xsi:type="Console" name="console"
                layout="${longdate}|${level:uppercase=true}|${logger:shortName=true}|${message} ${exception:format=tostring}" />

        <!-- ALL LEVELS - Complete log file -->
        <target xsi:type="File" name="allfile"
                fileName="logs/worker-all-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-all-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="30"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- TRACE level only -->
        <target xsi:type="File" name="tracefile"
                fileName="logs/worker-trace-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-trace-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="7"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- DEBUG level and above -->
        <target xsi:type="File" name="debugfile"
                fileName="logs/worker-debug-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-debug-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="14"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- INFO level and above -->
        <target xsi:type="File" name="infofile"
                fileName="logs/worker-info-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-info-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="30"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- WARN level and above -->
        <target xsi:type="File" name="warnfile"
                fileName="logs/worker-warn-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-warn-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="30"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- ERROR level and above -->
        <target xsi:type="File" name="errorfile"
                fileName="logs/worker-error-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-error-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="90"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- FATAL level only -->
        <target xsi:type="File" name="fatalfile"
                fileName="logs/worker-fatal-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-fatal-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="365"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- SPECIALIZED - Voice logs (all levels) -->
        <target xsi:type="File" name="voicefile"
                fileName="logs/worker-voice-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-voice-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="7"
                concurrentWrites="true"
                keepFileOpen="false" />

        <!-- SPECIALIZED - Discord gateway logs (all levels) -->
        <target xsi:type="File" name="discordfile"
                fileName="logs/worker-discord-${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
                archiveFileName="logs/archives/worker-discord-{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd"
                maxArchiveFiles="7"
                concurrentWrites="true"
                keepFileOpen="false" />
    </targets>

    <!-- Logging rules -->
    <rules>
        <!-- Voice-related logs to specialized file (Trace level for debugging 4006) -->
        <logger name="Ogur.Sentinel.Worker.Services.VoiceService*" minlevel="Trace" writeTo="voicefile" />
        <logger name="Ogur.Sentinel.Worker.Services.DiscordVoiceClient" minlevel="Trace" writeTo="voicefile" />

        <!-- Discord gateway logs to specialized file -->
        <logger name="Ogur.Sentinel.Worker.Discord.*" minlevel="Trace" writeTo="discordfile" />

        <!-- Skip noisy Microsoft logs (only warnings and above) -->
        <logger name="Microsoft.AspNetCore.*" maxlevel="Info" final="true" />
        <logger name="Microsoft.Extensions.Http.*" maxlevel="Info" final="true" />
        <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

        <!-- Level-specific files -->
        <logger name="*" level="Trace" writeTo="tracefile" />
        <logger name="*" minlevel="Debug" writeTo="debugfile" />
        <logger name="*" minlevel="Info" writeTo="infofile" />
        <logger name="*" minlevel="Warn" writeTo="warnfile" />
        <logger name="*" minlevel="Error" writeTo="errorfile" />
        <logger name="*" level="Fatal" writeTo="fatalfile" />

        <!-- All logs to console and complete file -->
        <logger name="*" minlevel="Trace" writeTo="console,allfile" />
    </rules>
</nlog>