<Page x:Class="Ogur.Sentinel.Devexpress.Views.TimerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
      Background="#1e1e1e"
      SizeChanged="Page_SizeChanged"
      Unloaded="Page_Unloaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderText"
                  Grid.Row="0"
                  Text="Next Respawns"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,20"/>

        <!-- Timers Container -->
        <Grid x:Name="TimersContainer" 
              Grid.Row="1">
            
            <!-- 10m Timer -->
            <Border x:Name="Timer10mBorder"
                   Background="#2d2d2d"
                   CornerRadius="10"
                   BorderBrush="#4CAF50"
                   BorderThickness="2"
                   Margin="5"
                   Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock x:Name="Label10m"
                              Grid.Row="0"
                              Text="10 Minutes"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#4CAF50"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock x:Name="Countdown10mText"
                              Grid.Row="1"
                              Text="--:--:--"
                              FontSize="48"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    
                    <TextBlock x:Name="NextTime10mText"
                              Grid.Row="2"
                              Text="Next: --:--:--"
                              FontSize="14"
                              Foreground="#999"
                              HorizontalAlignment="Center"
                              Margin="0,15,0,0"/>
                </Grid>
            </Border>
            
            <!-- 2h Timer -->
            <Border x:Name="Timer2hBorder"
                   Background="#2d2d2d"
                   CornerRadius="10"
                   BorderBrush="#2196F3"
                   BorderThickness="2"
                   Margin="5"
                   Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock x:Name="Label2h"
                              Grid.Row="0"
                              Text="2 Hours"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#2196F3"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock x:Name="Countdown2hText"
                              Grid.Row="1"
                              Text="--:--:--"
                              FontSize="48"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    
                    <TextBlock x:Name="NextTime2hText"
                              Grid.Row="2"
                              Text="Next: --:--:--"
                              FontSize="14"
                              Foreground="#999"
                              HorizontalAlignment="Center"
                              Margin="0,15,0,0"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status -->
        <TextBlock x:Name="StatusText"
                  Grid.Row="2"
                  Text="Last synced: Never"
                  FontSize="12"
                  Foreground="#666"
                  HorizontalAlignment="Center"
                  Margin="0,20,0,0"/>
    </Grid>
</Page>