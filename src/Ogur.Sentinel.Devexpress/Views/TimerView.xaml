<Page x:Class="Ogur.Sentinel.Devexpress.Views.TimerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
      Background="#1e1e1e"
      SizeChanged="Page_SizeChanged"
      Unloaded="Page_Unloaded"
      MouseDown="Page_MouseDown">

    <Grid x:Name="MainGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header - z animacją -->
        <TextBlock x:Name="HeaderText"
                  Grid.Row="0"
                  Text="Next Respawns"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,20"
                  RenderTransformOrigin="0.5,0">
            <TextBlock.RenderTransform>
                <ScaleTransform x:Name="HeaderScale" ScaleY="1"/>
            </TextBlock.RenderTransform>
        </TextBlock>

        <!-- Timers Container -->
        <Grid x:Name="TimersContainer" 
              Grid.Row="1">
            
            <!-- 10m Timer -->
            <Border x:Name="Timer10mBorder"
                   Background="#2d2d2d"
                   CornerRadius="10"
                   BorderBrush="#4CAF50"
                   BorderThickness="2"
                   Margin="5"
                   Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="Label10mRow" Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition x:Name="NextTime10mRow" Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Label z animacją -->
                    <TextBlock x:Name="Label10m"
                              Grid.Row="0"
                              Text="10 Minutes"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#4CAF50"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"
                              RenderTransformOrigin="0.5,0">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="Label10mScale" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    
                    <TextBlock x:Name="Countdown10mText"
                               Grid.Row="1"
                               Text="{Binding Countdown10mText}"
                               Foreground="{Binding Countdown10mForeground}"
                               FontSize="48"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="2"/>
                    
                    <!-- Next Time z animacją -->
                    <TextBlock x:Name="NextTime10mText"
                               Grid.Row="2"
                               Text="{Binding NextTime10mText}"
                               FontSize="14"
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               RenderTransformOrigin="0.5,1">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="NextTime10mScale" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Grid>
            </Border>
            
            <!-- 2h Timer -->
            <Border x:Name="Timer2hBorder"
                   Background="#2d2d2d"
                   CornerRadius="10"
                   BorderBrush="#2196F3"
                   BorderThickness="2"
                   Margin="5"
                   Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="Label2hRow" Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition x:Name="NextTime2hRow" Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Label z animacją -->
                    <TextBlock x:Name="Label2h"
                              Grid.Row="0"
                              Text="2 Hours"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#2196F3"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"
                              RenderTransformOrigin="0.5,0">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="Label2hScale" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    
                    <TextBlock x:Name="Countdown2hText"
                               Grid.Row="1"
                               Text="{Binding Countdown2hText}"
                               Foreground="{Binding Countdown2hForeground}"
                               FontSize="48"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="2"/>
        
                    <!-- Next Time z animacją -->
                    <TextBlock x:Name="NextTime2hText"
                               Grid.Row="2"
                               Text="{Binding NextTime2hText}"
                               FontSize="14"
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               RenderTransformOrigin="0.5,1">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="NextTime2hScale" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   Text="{Binding StatusText}"
                   Foreground="{Binding StatusForeground}"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"
                   RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <ScaleTransform x:Name="StatusTextScale" ScaleX="1" ScaleY="1"/>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Grid>
</Page>